<div class="container-fluid">

    <h2 style="margin-left: 17%; margin-top: 3%;"><%= userinfo[0].name %>님 마이페이지</h2>
    <div class="col-md-10 offset-1">
        <a href="/mypage/client_update/<%= user.userid %>"><input type="button" value="회원정보수정"
                class="btn btn-outline-secondary" style="margin-left: 80%"></a>


        <div class="row col-10 offset-1">
            <div class="col-md-6" style="float: left">
                <h4 style="margin-top: 5%">배송지 목록</h4></br>
                <table id="mytable" class="table">
                    <thead>
                        <th>우편번호</th>
                        <th>기본주소</th>
                        <th>상세주소</th>
                        <th></th>
                    </thead>
                    <tbody>
                        <tr>
                            <% if(address == null){ %>
                            <% }else{%>
                            <% for(var i = 0; i < address.length; i++){%>
                            <td style="word-break:break-all;"><%= address[i].zipCode %></td>
                            <td style="word-break:break-all;"><%= address[i].priAddress %></td>
                            <td style="word-break:break-all;"><%= address[i].detAddress %></td>
                            <td style="width: 20%"><a href="/mypage/delete1/<%=address[i].addressNum%>" class="btn peach">삭제</button> </td>
                        </tr>
                        <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6" style="float: left">
                <h4 style="margin-top: 5%">신용카드 목록</h4></br>
                <table id="mytable" class="table">
                    <thead>
                        <th>카드번호</th>
                        <th>유효기간</th>
                        <th>CVC</th>
                        <th></th>
                    </thead>
                    <tbody>
                        <tr>
                            <% if(card == null){ %>
                            <% }else{%>
                            <% for(var i = 0; i < card.length; i++){%>
                            <td style="word-break:break-all;"><%= card[i].cardNum %></td>
                            <td style="word-break:break-all;"><%= card[i].validity %></td>
                            <td style="word-break:break-all;"><%= card[i].CVC %></td>
                            <td style="width: 20%"><a href="/mypage/delete2/<%=card[i].cardNum%>" class="btn peach">삭제</button></td>
                        </tr>
                        <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>


            <div class="col-md-10 offset-1" style="margin-top: 3%">
                <h4>주문 목록</h4></br>
                <table id="mytable" class="table">
                    <thead>
                        <th style="width:8%">번호</th>
                        <th style="width:25%">상품명</th>
                        <th style="width:13%">카드</th>
                        <th style="width:25%">주소지</th>
                        <th style="width:12%">가격</th>
                        <th style="width:8%">수량</th>
                        <th>주문날짜</th>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < order.length; i++) { %>
                        <tr>
                            <td style="vertical-align: middle;">
                                <h6><%= i+1 %></h6>
                            </td>
                            <td style="vertical-align: middle; "> <a href="/product/product_detail/<%= order[i].productNum%>">
                                    <img class="basketimage" src="../../<%= order[i].productImg%>" alt=""
                                        style="float: left; height: 70px; width: 70px" name="BookImg"></a>
                                <a href="/product/product_detail/<%= order[i].productNum%>">
                                    <p style="text-align: justify; margin-left: 40%"><%= order[i].productName%>
                                </a><br>
                            </td>
                            <td style="vertical-align: middle;">
                                <%= order[i].cardNum%> <br> <%= order[i].validity%>
                            </td>
                            <td style="vertical-align: middle;">
                                <%= order[i].zipCode + " " + order[i].priAddress + " " + order[i].detAddress%>
                            </td>
                            <td style="vertical-align: middle;">
                                <%= order[i].orderCount * order[i].price %>원
                            </td>
                            <td style="vertical-align: middle;">
                                <%= order[i].orderCount%>
                            </td>
                            <td style="vertical-align: middle;">
                                <%= order[i].date%>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <h4>총 주문 금액 : <%= userinfo[0].totalprice%>원</h4>
            </div>
    </div>
</div>
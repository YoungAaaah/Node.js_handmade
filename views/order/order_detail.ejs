<%var Price = 0%>
<%for (let i = 0; i < productinfo.length; i++) {%>
<%Price += (productinfo[i].price)*(basket[i].basketCount);%>
<% console.log(Price); %>
<%}%>
<div class="container-fluid" style="margin-top: 3%; margin-bottom:3%">
            <div class="row">
                <div class="col-md-10 offset-1">
                    <h4 style="margin-bottom: 3%">주문 페이지</h4>
                    <table id="mytable" class="table">
                        <thead>
                            <th>번호</th>
                            <th>상품명</th>
                            <th>가격</th>
                            <th>수량</th>
                        </thead>
                        <tbody>
                            <% for (var i=0; i< productinfo.length; i++) { %>
<tr>
    <td>
        <h6><%= i+1 %>.</h6>
        <input type="hidden" value="<%= productinfo[i].productNum %>" name="productNum" />
    </td>
    <td> <a href="#"><img src="../../<%= productinfo[i].productImg %>" alt=""
                style="float: left; width:10%; margin-left: 5%"></a>
        <p style="text-align: justify; margin-left: 20%; "><a href="#">
                <%= productinfo[i].productName %></a></p>
    </td>
    <td>
        <p style="margin-top: 10%;"><%= productinfo[i].price %>원</p>

    </td>
    <td>
        <p style="margin-top: 15%;"><%= basket[i].basketCount %></p>
        <input type="hidden" name="amount" id="amount" value="<%=basket[i].basketCount%>">
    </td>
</tr>
<% } %>
</tbody>
</table>
</div>
</div>
<div class="col-md-10 offset-1">
    <h5 style="margin-top: 4%">주문 정보</h5>
    <table id="mytable" class="table">
        <tbody>

            <tr>
                <td>
                    <h6 style="margin-top: 2%">배송지</h6>
                </td>
                <td>
                    <div>
                        <select name="Ship" class="custom-select d-block w-100" id="country" required>
                            <option value="">주소를 고르세요...</option>
                            <% for(var a=0; a< clientinfo.length; a++) { %>
                            <option value="<%= clientinfo[a].addressNum %>"><%= clientinfo[a].zipCode %> |
                                <%= clientinfo[a].priAddress %> | <%= clientinfo[a].detAddress %></option>
                            <% } %>
                        </select>
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <h6 style="margin-top: 2%">신용카드</h6>
                </td>
                <td>
                    <div>
                        <select name="Card" class="custom-select d-block w-100" id="country" required>
                            <option value="">카드를 고르세요...</option>
                            <% for(var b=0; b< clientinfo.length; b++) { %>
                            <option value="<%= clientinfo[b].cardNum %>"><%= clientinfo[b].cardNum %> |
                                <%= clientinfo[b].validity %> | <%= clientinfo[b].CVC %> </option>
                            <% } %>
                        </select>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="row" style="margin-top: 5%">
        <div class="col-md-12" style="margin-top: 1%">
            <h5 style="float: left; margin-top:0.5%;margin-right: 5%">총 주문 금액 : <%= Price%>원</h5>
            <input type="hidden" name="price" value="<%= Price%>" />
            <input type="submit" class="peach btn" style="color:white; float: right; margin-right: 1%" value="주문하기">
        </div>
    </div>
</div>
</div>
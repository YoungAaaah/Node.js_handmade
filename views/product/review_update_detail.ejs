<form action="/product/review_update" method="POST">
    <div style="margin-left:25%; margin-top:3%; margin-bottom:3%">
        <h3 style="margin-bottom: 3%">리뷰 수정</h3>
        <h4>별점</h4>
        <div class="btn-group btn-group-toggle" data-toggle="buttons"
                    style="width:40%;  margin-bottom: 5%">
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="star" value="1" id=""> 1
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="star" value="2" id=""> 2
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="star" value="3" id=""> 3
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="star" value="4" id=""> 4
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="star" value="5" id=""> 5
                    </label>
                </div>
                <br><br>
                <input type="hidden" name="productNum" value="<%= content[0].productNum %>"/>
            <h4>리뷰 상세내용</h4>
            <input name="reviewInfo" type="text" class="form-control" style="width: 58%; height: 140px; margin-bottom: 5%" value="<%= content[0].reviewInfo %>"/>
                
        <input class="btn peach" type="submit" style="width: 58%" value="수정완료"/>
    </div>
</form>